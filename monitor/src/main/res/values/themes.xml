<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Monitor.Base" parent="Theme.Design.Light.NoActionBar" />

    <style name="Theme.Monitor" parent="Theme.Monitor.Base">
        <item name="android:statusBarColor">@color/monitor_top_bar</item>
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>

    <style name="Monitor.Item.Title" parent="android:TextAppearance">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Monitor.Item.Content" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Monitor.TextAppearance.Label" parent="android:TextAppearance.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Monitor.TextAppearance.Value" parent="android:TextAppearance.Small">
        <item name="android:layout_weight">1</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">6dp</item>
    </style>

    <style name="Monitor.TextAppearance.TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

</resources>